	<!--
	<Atom>
		<Rel/>
		<Expr>
			<Expr>
				<Fun>Compose</Fun>
				<Fun per="copy">age</Fun>
				<Fun per="value">first-born</Fun>
			</Expr>
			<Ind>John</Ind>
			<Ind>Mary</Ind>
		</Expr>
	</Atom>
	-->
	
	<!-- example 12 (higher order) -->
	<!--
		<Atom>
		<Lambda>
			<Var>X</Var>
			<Var>Y</Var>
			<Expr>
				<Fun per="copy">age</Fun>
				<Expr>
					<Fun per="value">first-born</Fun>
					<Var>X</Var>
					<Var>Y</Var>
				</Expr>
			</Expr>
		</Lambda>
	</Atom>
	-->

</Assert>
	
</RuleML>
